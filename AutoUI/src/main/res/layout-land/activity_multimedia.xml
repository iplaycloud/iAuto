<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layoutTitle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/multimedia_title_height"
        android:background="#383838" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/ui_setting_top_bar_bg"
            android:gravity="center_vertical"
            android:hint="@string/title_multimedia"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:textColor="#dddddd"
            android:textColorHint="#cccccc"
            android:textSize="@dimen/multimedia_title_text_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imageVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/multimedia_image_margin_left_right"
            android:layout_marginTop="@dimen/multimedia_image_margin_top"
            android:background="@drawable/multimedia_video_tq_6"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/textVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageVideo"
            android:layout_alignRight="@id/imageVideo"
            android:layout_below="@id/imageVideo"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/title_video"
            android:textColor="#ffffff"
            android:textSize="@dimen/multimedia_item_text_size" />

        <ImageView
            android:id="@+id/imageGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/multimedia_image_margin_left_right"
            android:layout_marginTop="@dimen/multimedia_image_margin_top"
            android:background="@drawable/multimedia_image_tq_6"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/textGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageGallery"
            android:layout_alignRight="@id/imageGallery"
            android:layout_below="@id/imageGallery"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/title_picture"
            android:textColor="#ffffff"
            android:textSize="@dimen/multimedia_item_text_size" />
    </RelativeLayout>

</LinearLayout>