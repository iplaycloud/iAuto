<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/layoutNineOne"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sl9_big_item_image_height"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <!-- 导航 -->

        <RelativeLayout
            android:id="@+id/layoutNavigation"
            android:layout_width="@dimen/sl9_big_item_image_width"
            android:layout_height="@dimen/sl9_big_item_image_height"
            android:layout_marginLeft="@dimen/sl9_main_item_margin_right"
            android:layout_marginRight="@dimen/sl9_main_item_margin_right" >

            <ImageView
                android:id="@+id/imageNavigation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:contentDescription="@null"
                android:src="@drawable/navigation_jj_9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >
            </RelativeLayout>
        </RelativeLayout>
        <!-- 行车记录 -->

        <RelativeLayout
            android:id="@+id/layoutRecord"
            android:layout_width="@dimen/sl9_big_item_image_width"
            android:layout_height="@dimen/sl9_big_item_image_height"
            android:layout_marginRight="@dimen/sl9_main_item_margin_right" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/record_jj_9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/main_item_title_margin_left"
                android:layout_marginTop="@dimen/main_item_title_margin_top"
                android:textColor="@color/main_item_title_color"
                android:textSize="@dimen/main_item_title_size" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >

                <ImageView
                    android:id="@+id/imageRecordState"
                    android:layout_width="@dimen/sl6_record_btn_edge"
                    android:layout_height="@dimen/sl6_record_btn_edge"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="26dp"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@null"
                    android:src="@drawable/record_start_normal_jj_9" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/textRecStateBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/imageRecordState"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/sl6_record_text_margin_bottom"
                    android:text="@string/rec_state_back_off"
                    android:textColor="@color/sl_record_screen_text_color"
                    android:textSize="@dimen/record_screen_text_size" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/textRecStateFront"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/textRecStateBack"
                    android:layout_centerHorizontal="true"
                    android:text="@string/rec_state_front_off"
                    android:textColor="@color/sl_record_screen_text_color"
                    android:textSize="@dimen/record_screen_text_size" />
            </RelativeLayout>
        </RelativeLayout>
        
        <!-- DSA -->

        <RelativeLayout
            android:id="@+id/layoutEDog"
            android:layout_width="@dimen/sl9_big_item_image_width"
            android:layout_height="@dimen/sl9_big_item_image_height"
            android:layout_marginRight="@dimen/sl9_main_item_margin_right" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:contentDescription="@null"
                android:src="@drawable/edog_jj_9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >
            </RelativeLayout>
        </RelativeLayout>

        <!-- 音乐 -->

        <RelativeLayout
            android:id="@+id/layoutMusic"
            android:layout_width="@dimen/sl9_big_item_image_width"
            android:layout_height="@dimen/sl9_big_item_image_height"
            android:layout_marginRight="@dimen/sl9_main_item_margin_right" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:contentDescription="@null"
                android:src="@drawable/music_jj_9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/sl9_big_item_image_width"
            android:layout_height="@dimen/sl9_big_item_image_height"
            android:layout_marginRight="@dimen/sl9_main_item_margin_right" >

            <!-- 文件管理 -->

            <RelativeLayout
                android:id="@+id/layoutFileManager"
                android:layout_width="@dimen/sl9_small_item_image_width"
                android:layout_height="@dimen/sl9_small_item_image_height"
                android:layout_alignParentBottom="true" >

                <ImageView
                    android:layout_width="@dimen/sl9_big_item_image_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:contentDescription="@null"
                    android:src="@drawable/filemanager_jj_9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground" />
            </RelativeLayout>

            <!-- 在线电台 -->

            <RelativeLayout
                android:id="@+id/layoutXimalaya"
                android:layout_width="@dimen/sl9_small_item_image_width"
                android:layout_height="@dimen/sl9_small_item_image_height"
                android:layout_above="@id/layoutFileManager"
                android:layout_marginBottom="20dp" >

                <ImageView
                    android:layout_width="@dimen/sl9_big_item_image_width"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/fm_online_jj_9" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?android:attr/selectableItemBackground" >
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutBottomSmall"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:visibility="gone" >
    </RelativeLayout>

</RelativeLayout>