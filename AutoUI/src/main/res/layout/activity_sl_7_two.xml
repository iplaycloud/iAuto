<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTwo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_reverse_tq_6"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:orientation="horizontal" >

        <!-- 云服务 -->

        <RelativeLayout
            android:id="@+id/layoutYiKa"
            android:layout_width="@dimen/ui7_image_big_width"
            android:layout_height="@dimen/ui7_image_big_height"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="@dimen/ui7_item_margin_horizontal" >

            <ImageView
                android:id="@+id/imageYika"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/weme_7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >
            </RelativeLayout>
        </RelativeLayout>

        <!-- 喜马拉雅 -->

        <RelativeLayout
            android:id="@+id/layoutXimalaya"
            android:layout_width="@dimen/ui7_image_big_width"
            android:layout_height="@dimen/ui7_image_big_height"
            android:layout_marginRight="@dimen/ui7_item_margin_horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/ximalaya_7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >
            </RelativeLayout>
        </RelativeLayout>

        <!-- 微信助手 -->

        <RelativeLayout
            android:id="@+id/layoutWechat"
            android:layout_width="@dimen/ui7_image_big_width"
            android:layout_height="@dimen/ui7_image_big_height"
            android:layout_marginRight="@dimen/ui7_item_margin_horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/wechat_7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutWeather"
            android:layout_width="@dimen/ui7_image_big_width"
            android:layout_height="@dimen/ui7_image_big_height"
            android:layout_marginRight="@dimen/ui7_item_margin_horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/weather_7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >

                <ImageView
                    android:id="@+id/imageWeatherInfo"
                    android:layout_width="@dimen/ui7_weather_info_icon_length"
                    android:layout_height="@dimen/ui7_weather_info_icon_length"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:contentDescription="@null"
                    android:src="@drawable/weather_sun_tq_6" />

                <TextView
                    android:id="@+id/textWeatherTmpRange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageWeatherInfo"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/weather_no_temp"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textWeatherCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textWeatherTmpRange"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/weather_location_tq_6"
                    android:text="@string/weather_not_record"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <TextClock
                    android:id="@+id/textClock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:format12Hour="HH:mm"
                    android:format24Hour="HH:mm"
                    android:textColor="#ffffff"
                    android:textSize="30sp" />

                <TextClock
                    android:id="@+id/textDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/textClock"
                    android:layout_centerHorizontal="true"
                    android:format12Hour="yy/MM/dd"
                    android:format24Hour="yy/MM/dd"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textWeatherInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/textWeatherTmpRange"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/weather_info_margin_span"
                    android:layout_marginRight="@dimen/weather_info_margin_right"
                    android:text="@string/weather_unknown"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/weather_info_text_size"
                    android:visibility="gone" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layoutSetting"
            android:layout_width="@dimen/ui7_image_big_width"
            android:layout_height="@dimen/ui7_image_big_height"
            android:layout_marginRight="@dimen/ui7_item_margin_horizontal" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@null"
                android:src="@drawable/setting_7" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground" >
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>